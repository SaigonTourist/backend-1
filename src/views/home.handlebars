<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="text-primary">ðŸ“¦ Lista de Productos</h1>
            <div>
                <span class="badge bg-info">{{products.length}} productos</span>
                <a href="/realtimeproducts" class="btn btn-success ms-2">
                    âš¡ Ver en Tiempo Real
                </a>
            </div>
        </div>

        {{#if products.length}}
        <div class="row">
            {{#each products}}
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card product-card h-100">
                    {{#if thumbnails.length}}
                    <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                        <span class="text-muted">ðŸ“· {{thumbnails.length}} imagen(es)</span>
                    </div>
                    {{/if}}
                    
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <h5 class="card-title text-primary">{{title}}</h5>
                            {{#if status}}
                            <span class="badge bg-success status-badge">Disponible</span>
                            {{else}}
                            <span class="badge bg-danger status-badge">No disponible</span>
                            {{/if}}
                        </div>
                        
                        <p class="card-text text-muted">{{description}}</p>
                        
                        <div class="row text-center">
                            <div class="col-4">
                                <strong class="text-success">${{price}}</strong>
                                <br><small class="text-muted">Precio</small>
                            </div>
                            <div class="col-4">
                                <strong class="text-info">{{stock}}</strong>
                                <br><small class="text-muted">Stock</small>
                            </div>
                            <div class="col-4">
                                <strong class="text-warning">ID: {{id}}</strong>
                                <br><small class="text-muted">{{code}}</small>
                            </div>
                        </div>
                        
                        <div class="mt-3">
                            <span class="badge bg-secondary">{{category}}</span>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
        {{else}}
        <div class="text-center py-5">
            <div class="mb-4">
                <span style="font-size: 4rem;">ðŸ“¦</span>
            </div>
            <h3 class="text-muted">No hay productos disponibles</h3>
            <p class="text-muted">Usa la API para agregar productos o ve a la vista de tiempo real para crearlos</p>
            <div class="mt-3">
                <a href="/realtimeproducts" class="btn btn-primary">âš¡ Ir a Tiempo Real</a>
            </div>
        </div>
        {{/if}}
    </div>
</div>

<!-- InformaciÃ³n de la API -->
<div class="row mt-5">
    <div class="col-12">
        <div class="card bg-light">
            <div class="card-header">
                <h5 class="mb-0">ðŸ”§ Endpoints de la API</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <h6>Productos:</h6>
                        <ul class="list-unstyled">
                            <li><code>GET /api/products</code> - Listar todos</li>
                            <li><code>GET /api/products/:id</code> - Ver uno</li>
                            <li><code>POST /api/products</code> - Crear</li>
                            <li><code>PUT /api/products/:id</code> - Actualizar</li>
                            <li><code>DELETE /api/products/:id</code> - Eliminar</li>
                        </ul>
                    </div>
                    <div class="col-md-6">
                        <h6>Carritos:</h6>
                        <ul class="list-unstyled">
                            <li><code>POST /api/carts</code> - Crear carrito</li>
                            <li><code>GET /api/carts/:id</code> - Ver carrito</li>
                            <li><code>POST /api/carts/:cid/product/:pid</code> - Agregar producto</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>